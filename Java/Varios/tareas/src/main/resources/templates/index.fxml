<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="453.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gm.tareas.controlador.IndexControlador">
   <children>
      <Label layoutX="202.0" layoutY="14.0" text="Sistema de tareas">
         <font>
            <Font name="Comic Sans MS Bold Italic" size="22.0" />
         </font></Label>
      <TableView fx:id="tareaTabla" layoutX="252.0" layoutY="66.0" onMouseClicked="#cargarTareaFormulario" prefHeight="308.0" prefWidth="326.0">
        <columns>
          <TableColumn fx:id="idTarea" prefWidth="75.0" text="Id" />
          <TableColumn fx:id="NombreTarea" prefWidth="75.0" text="Tarea" />
            <TableColumn fx:id="responsable" prefWidth="75.0" text="Responsable" />
            <TableColumn fx:id="status" prefWidth="75.0" text="Estado" />
        </columns>
      </TableView>
      <AnchorPane layoutX="22.0" layoutY="66.0" prefHeight="308.0" prefWidth="224.0">
         <children>
            <Label layoutX="14.0" layoutY="21.0" text="Tarea: ">
               <font>
                  <Font name="Courier New Bold Italic" size="12.0" />
               </font></Label>
            <Label layoutX="13.0" layoutY="77.0" text="Responsable: ">
               <font>
                  <Font name="Courier New Bold Italic" size="12.0" />
               </font></Label>
            <Label layoutX="16.0" layoutY="137.0" text="Estado: ">
               <font>
                  <Font name="Courier New Bold Italic" size="12.0" />
               </font></Label>
            <TextField fx:id="nombreTareaTexto" layoutX="16.0" layoutY="46.0" prefHeight="25.0" prefWidth="189.0" />
            <TextField fx:id="responsableTexto" layoutX="16.0" layoutY="101.0" prefHeight="25.0" prefWidth="189.0" />
            <TextField fx:id="estadoTexto" layoutX="16.0" layoutY="164.0" prefHeight="25.0" prefWidth="189.0" />
         </children></AnchorPane>
      <AnchorPane layoutX="19.0" layoutY="381.0" prefHeight="60.0" prefWidth="560.0">
         <children>
            <Button fx:id="btnAgregar" layoutX="118.0" layoutY="18.0" mnemonicParsing="false" onAction="#agregarTarea" text="Agregar" />
            <Button fx:id="btnModificar" layoutX="198.0" layoutY="18.0" mnemonicParsing="false" onAction="#modificarTarea" text="Modificar" />
            <Button fx:id="btnEliminar" layoutX="280.0" layoutY="18.0" mnemonicParsing="false" onAction="#eliminarTarea" text="Eliminar" />
            <Button fx:id="btnLimpiar" layoutX="355.0" layoutY="18.0" mnemonicParsing="false" onAction="#limpiarFormulario" text="Limpiar Formulario" />
         </children></AnchorPane>
   </children>
</AnchorPane>
